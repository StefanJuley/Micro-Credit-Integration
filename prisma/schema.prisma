generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FeedItem {
  id               Int      @id @default(autoincrement())
  orderId          Int      @unique
  orderNumber      String
  applicationId    String
  creditCompany    String?
  customerName     String
  bankStatus       String
  crmStatus        String?
  paymentType      String?
  orderStatus      String?
  conditionsChanged Boolean @default(false)
  comparison       Json?
  orderCreatedAt   DateTime?
  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())

  @@index([bankStatus])
  @@index([conditionsChanged])
  @@index([creditCompany])
  @@index([orderStatus])
  @@map("feed_items")
}

model SyncMetadata {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  value       String
  updatedAt   DateTime @updatedAt

  @@map("sync_metadata")
}
